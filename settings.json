{
    // "editor.lineHeight": 22,
    "editor.fontSize": 13,
    "editor.fontWeight": "normal",
    "editor.fontFamily": "Monaco",
    "editor.minimap.enabled": false,
    "editor.showUnused": false,

    "workbench.colorCustomizations": {
        "statusBar.background" : "#1e1e1e",
        "statusBar.noFolderBackground" : "#212121",
        "statusBar.debuggingBackground": "#263238"
    },
    "explorer.confirmDragAndDrop": false,
    "workbench.iconTheme": "Monokai Classic Icons",
    "python.showStartPage": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter-notebook"
    },
    "workbench.startupEditor": "none",
    "breadcrumbs.enabled": false,
    "[javascript]": {
        "editor.defaultFormatter": "vscode.typescript-language-features"
    },
    "notebook.cellToolbarLocation": {
        "default": "right",
        "jupyter-notebook": "left"
    },
    "workbench.colorTheme": "Theme",
    "security.workspace.trust.untrustedFiles": "open",
    "files.trimTrailingWhitespace": true,
    "redhat.telemetry.enabled": false,
    "[python]": {
        "editor.defaultFormatter": "ms-python.python"
    },
    "python.defaultInterpreterPath": "/opt/homebrew/bin/python3.11",
    "python.analysis.extraPaths": ["${workspaceFolder}/global_helpers"],
    "python.autoComplete.extraPaths": ["${workspaceFolder}/global_helpers"],
    "files.associations": {
        "*panther_analysis_tool": "python"
    }
}
